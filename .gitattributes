# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Python files always use LF
*.py text eol=lf

# PyInstaller runtime hooks must use LF
pyi_rth*.py text eol=lf

# Windows batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts use LF
*.sh text eol=lf

# No normalization for files that should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
